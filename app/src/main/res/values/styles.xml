<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseLinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BtnActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop"> @dimen/size_8dp</item>

        <item name="android:insetBottom"> @dimen/size_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0dp</item>

        <item name="android:layout_weight">@dimen/one</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/iconcolor</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/iconcolor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="BtnSettingsText" >

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorsettingsbtn</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BtnSettings" parent="BtnSettingsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/size_0dp</item>
        <item name="android:paddingEnd">@dimen/size_0dp</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="drawableTint">@color/grey</item>


    </style>
    <style name="Switchtheme" parent="BtnSettings" >
        <item name="android:trackTint">@color/colorfortrack</item>
        <item name="android:thumbTint">@color/thumbTint</item>
    </style>


    <style name="LLstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:orientation">vertical</item>
    </style>
    <style name="LLstyleMain" parent="LLstyle" >

        <item name="android:background">@color/blue</item>
    </style>
    <style name="LLstyleStns" parent="LLstyle" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainTextinActivity">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="MainTextinActivitySettings" parent="MainTextinActivity" >
        <item name="android:textColor">@color/iconcolor</item>
        <item name="android:textSize">@dimen/size_22sp</item>
    </style>

    <style name="MainTextinActivityMain"   >
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
    <style name="CustomSwitch" >

        <item name="trackTint">@color/colorfortrack</item>
        <item name="thumbTint">@color/thumbTint</item>

    </style>

    <style name="SongName" >
        <item name="android:lineHeight">@dimen/size_13sp</item>
        <item name="android:textColor">@color/songname</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>
    <style name="SingerName" >
        <item name="android:lineHeight">@dimen/size_13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/spfour</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TrackTime" >
        <item name="android:lineHeight">@dimen/size_13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/spfour</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="placeholderText" >
    <item name="android:textColor">@color/placeholderTextColor</item>
    <item name="android:textSize">19sp</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="updateButton" >
        <item name="android:textColor">@color/updatebtTextColor</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">@color/updatebtbackgroundTintColor</item>
    </style>


    <style name="clearHistoryBtn" >
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="backgroundTint">@color/clearHistoryBtnBckdTint</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/clearHistoryBtnText</item>
    </style>

    <style name="searchHistory" >
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_19sp</item>

        <item name="android:textColor">@color/searchHistory</item>
    </style>

    <style name="SongInfoAudioplayer" >
        <item name="android:textSize">@dimen/size_13sp</item>
        <item name="android:textColor">@color/mainInfoTrackAudioplayer</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:paddingVertical">@dimen/size_8dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="SongInfoValueAudioplayer">
        <item name="android:textSize">@dimen/size_13sp</item>
        <item name="android:layout_marginEnd">@dimen/size_16dp</item>
        <item name="android:textColor">@color/mainInfoValueTrackAudioplayer</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:paddingVertical">@dimen/size_8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NoFavTracks">
        <item name="android:textColor">#1A1B22</item>
    </style>
    <style name="MediaBackground">
        <item name="android:background">@color/colorMedia</item>
    </style>
    <style name="AddPlaylist">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:backgroundTint">#1A1B22</item>
    </style>

    <style name="NoPlayLists">
        <item name="android:textColor">#1A1B22</item>

    </style>
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>