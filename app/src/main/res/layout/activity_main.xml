<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="@dimen/dpthree">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/spone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dptwo"
        android:layout_marginTop="@dimen/dpone"
        android:layout_weight="@dimen/one"
        android:backgroundTint="@color/white"
        android:text="@string/app_search"
        android:textAllCaps="false"
        android:id="@+id/se"
        android:layout_marginBottom="@dimen/dpone"
        android:textColor="@color/black"
        android:textSize="@dimen/spone"
        app:cornerRadius="@dimen/dpone"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@color/iconcolor"/>


    <Button

        android:layout_width="match_parent"
        android:layout_height="@dimen/dptwo"
        android:layout_marginTop="@dimen/dpone"
        android:layout_weight="@dimen/one"
        android:backgroundTint="@color/white"
        android:id="@+id/media"
        android:text="@string/app_media"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/dpone"
        android:textColor="@color/black"
        android:textSize="@dimen/spone"
        app:cornerRadius="@dimen/dpone"
        app:icon="@drawable/mediam"
        app:iconGravity="textStart"
        app:iconTint="@color/iconcolor"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dptwo"
        android:layout_marginTop="@dimen/dpone"
        android:layout_weight="@dimen/one"
        android:backgroundTint="@color/white"
        android:id="@+id/settings"
        android:text="@string/app_settings"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/dpone"
        android:textColor="@color/black"
        android:textSize="@dimen/spone"
        app:cornerRadius="@dimen/dpone"
        app:icon="@drawable/settpic"
        app:iconGravity="textStart"
        app:iconTint="@color/iconcolor"/>
</LinearLayout>