<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"

    android:orientation="horizontal"
    android:id="@+id/viewForTracks">

        <ImageView

            android:layout_marginEnd="@dimen/dpten"
            android:layout_width="@dimen/dpnine"
            android:layout_height="@dimen/dpnine"

            android:layout_gravity="center_vertical"
            android:id="@+id/imageTrack" />

        <LinearLayout
            android:layout_width="@dimen/dptwo"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    style="@style/SongName"
                    android:id="@+id/nameOfTrack"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Yesterday (Remastered 2009)"
                    android:layout_marginTop="14dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                        <TextView

                            tools:text="The Beatles "
                            android:id="@+id/singerOfTrack"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            style="@style/SingerName"
                            />

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"

                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/dot"
                            android:layout_marginTop="@dimen/dpten" />

                        <TextView
                             android:id="@+id/timeOfTrack"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            tools:text="2:55"
                            style="@style/TrackTime"

                             />
                </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dpsix"
            android:layout_gravity="center_vertical"
            android:src="@drawable/trackbtn" />
</LinearLayout>